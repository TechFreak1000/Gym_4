@model List<Exercise>;
@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_akadminpg.cshtml";
}

<div class="container pt-5 mt-5">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Exercise Details</h2>
        </div>
       @*  <div class="col-6 text-end">
            <a asp-controller="Exercise" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Register New Exercise
            </a>
        </div> *@
    </div>
    <table class=" table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Muscle Group
                </th>
                <th>
                    Exercise
                </th>
                <th>
                    Edit Details
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.MuscleGroup</td>
                    <td>@obj.ExerciseName</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Exercise" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>  Edit
                            </a>
                            <a asp-controller="Exercise" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>  Remove
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>