@model Exercise
@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_akadminpg.cshtml";
}

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 pt-5 mt-5">
        <div class="text-primary">
            <h2>Remove Customer </h2>
            <hr />
        </div>

        <div class="mb-3 row">
            <label asp-for="MuscleGroup" class="p-0"></label>
            <input asp-for="MuscleGroup" disabled type="text" class="form-control" />
       
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="ExerciseName" class="p-0"></label>
            <input asp-for="ExerciseName" disabled type="text" class="form-control" />

        <div class="mb-3 row p-1">
            <div class="col-6 col-md-4">
                <button type="submit" class="btn btn-danger form-control">Remove</button>
            </div>

            <div class="col-6 col-md-4">
                <a asp-controller="Exercise" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back to Exercises
                </a>
            </div>
        </div>
</form>