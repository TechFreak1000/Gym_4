@model Customer
@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_akadminpg.cshtml";
}
<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="text-primary">
            <h2>Remove Customer </h2>
            <hr />
        </div>

        <div class="mb-3 row">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled type="text" class="form-control" />
       
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="PhoneNumber" class="p-0"></label>
            <input asp-for="PhoneNumber" disabled type="number" class="form-control" />
           
        </div>

        <div class="mb-3 row">
            <label asp-for="DOB" class="p-0"></label>
            <input asp-for="DOB" disabled type="date" class="form-control" />
           
        </div>

        <div class="mb-3 row">
            <label asp-for="Email" class="p-0"></label>
            <input asp-for="Email" disabled type="text" class="form-control" />
           
        </div>

        <div class="mb-3 row">
            <label asp-for="UserName" class="p-0"></label>
            <input asp-for="UserName" disabled type="text" class="form-control" />
           
        </div>

        <div class="mb-3 row">
            <label asp-for="PIN" class="p-0">PIN</label>
            <input asp-for="PIN" disabled type="number" class="form-control" />
            
        </div>

        <div class="mb-3 row">
            <label asp-for="Gender" class="p-0">Gender</label>
            Male<input asp-for="Gender" disabled type="radio" name="gender" value="male">
            Female<input asp-for="Gender" disabled type="radio" name="gender" value="female">
            Others<input asp-for="Gender" disabled type="radio" name="gender" value="Others">
        </div>

        <div class="mb-3 row">
            <label asp-for="DateOfResgistration" class="p-0"></label>
            <input asp-for="DateOfResgistration" disabled type="date" class="form-control" />
            
        </div>


        <div class="mb-3 row p-1">
            <div class="col-6 col-md-4">
                <button type="submit" class="btn btn-danger form-control">Remove</button>
            </div>

            <div class="col-6 col-md-4">
                <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back to Customer List
                </a>
            </div>
        </div>
</form>