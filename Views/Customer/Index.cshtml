@model List<Customer>;
@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_akadminpg.cshtml";
}

<style>

    .table ,.th, .td , .tr {
        border-bottom: 1px solid #ddd;
        color: white;

    }

</style>

<div class="container mt-5 pt-5 ">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-dark">Customer Details</h2>
        </div>
        @* <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Register New Customer
            </a>
        </div> *@
    </div>
<table class=" table table-bordered ">
        <thead >
            <tr>
        <th>
            Customer Name
        </th>
        <th>
            Gender
        </th>
        <th>
            Bmi
        </th>
        <th>
            Edit Details
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                    <td>@obj.Gender</td>
                    <td>@obj.BMI</td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Customer" asp-action="Edit" asp-route-id ="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i>  Edit
                    </a>
                            <a asp-controller="Customer" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                        <i class="bi bi-trash-fill"></i>  Remove
                    </a>
                </div>
            </td>
            </tr>
        }
    </tbody>
</table>
</div>