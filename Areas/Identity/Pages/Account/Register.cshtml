<div class="row mt-5 pt-5 ml-3">
    <div class="row justify-content-center">
        <div class="col-10 mt-1">
            <div class="card">
                <div class="card-header col-16">
                    <form id="registerForm" class="row " asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h2 class="mb-4 ">Create a new account.</h2>
                        <br />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <!-- Full name -->
                        <div class="form-floating col-12 mb-3">
                            <label asp-for="Input.FullName">Full Name</label>
                            <input asp-for="Input.FullName" class="form-control text-light" placeholder="Enter your Full Name" />
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>

                        <!-- Phone Number -->
                        <div class="form-floating col-6 mb-3">
                            <label asp-for="Input.PhoneNumber">Phone Number</label>
                            <input asp-for="Input.PhoneNumber" class="form-control text-light" placeholder="Enter your PhoneNumber" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="form-floating col-6 mb-3">
                            <label asp-for="Input.Email">Email</label>
                            <input asp-for="Input.Email" class="form-control text-light" autocomplete="username" aria-required="true" placeholder="Enter your email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Gender -->
                        <div class="form-floating  col-6 mb-3">
                            <label asp-for="Input.Gender">Gender</label>
                            <input asp-for="Input.Gender" class="form-control text-light" placeholder="Enter your Gender" />
                            <span asp-validation-for="Input.Gender" class="text-danger"></span>
                        </div>

                        <!-- Role -->
                        <div class="form-floating col-6">
                            <label asp-for="Input.Role">Role</label>
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-control text-light text-muted" placeholder="Enter your Role">
                                <option disabled selected>-Select Role-</option>
                            </select>
                        </div>

                        <!-- DOR -->
                        <div class="form-floating  col-6 mb-3">
                            <label asp-for="Input.DOR">Date of Registration</label>
                            <input asp-for="Input.DOR" type="date" class="form-control text-light text-muted" placeholder="Enter your DOR" />
                            <span asp-validation-for="Input.DOR" class="text-danger"></span>
                        </div>

                        <!-- DOB -->
                        <div class="form-floating col-6 mb-3">
                            <label asp-for="Input.DOB">Date of Birth</label>
                            <input asp-for="Input.DOB" type="date" class="form-control text-muted text-light" placeholder="Enter your DOB" />
                            <span asp-validation-for="Input.DOB" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-floating col-6 mb-3">
                            <label asp-for="Input.Password">Set Password</label>
                            <input asp-for="Input.Password" class="form-control text-light" autocomplete="new-password" aria-required="true" placeholder="Enter your password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- ConfirmPassword -->
                        <div class="form-floating col-6 mb-2">
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control text-light" autocomplete="new-password" aria-required="true" placeholder="Confirm your password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary ">Register</button>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

